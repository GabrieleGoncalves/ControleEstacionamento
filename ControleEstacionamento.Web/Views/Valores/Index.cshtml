@model IEnumerable<ControleEstacionamento.Web.ViewModels.Valores.ValoresViewModelList>
@{
    ViewBag.Title = "Index";
}

<h2>Valores Cadastrados</h2>


@Html.ActionLink("Cadastrar Novo Valor", "Cadastrar", "Valores")

@if (Model.Count() > 0)
{
    <table id="tabelaValores" class="table table-striped table-condensed align-center">
        <thead>
            <tr>
                <th style="text-align: left !important; ">
                    @Html.DisplayNameFor(model => model.ValorHora)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InicioVigencia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FimVigencia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValorAdicional)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var valores in Model)
            {
                <tr id="linha_@valores.ValorHora">
                    <td class="align-center">
                        <label id="lblValorHora-@valores.ValorHora" name="valorHora">@Html.DisplayFor(modelItem => valores.ValorHora)</label>
                    </td>
                    <td>
                        <label id="lblInicioVigencia-@valores.InicioVigencia">@Html.DisplayFor(modelItem => valores.InicioVigencia)</label>
                    </td>
                    <td>
                        <label id="lblFimVigencia-@valores.FimVigencia">@Html.DisplayFor(modelItem => valores.FimVigencia)</label>
                    </td>
                    <td>
                        <label id="lblValorAdicional-@valores.ValorAdicional">@Html.DisplayFor(modelItem => valores.ValorAdicional)</label>

                    </td>


                </tr>
            }

        </tbody>

    </table>
}

